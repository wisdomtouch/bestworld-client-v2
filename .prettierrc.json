{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": false,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "bracketSameLine": true,
  "printWidth": 100,
  "endOfLine": "auto",
  "importOrder": [
    "^@angular/(.*)$",
    "^@app/(.*)$",
    "^@components/(.*)$",
    "^@constants/(.*)$",
    "^@core/(.*)$",
    "^@layouts/(.*)$",
    "^@modules/(.*)$",
    "^@pipes/(.*)$",
    "^@services/(.*)$",
    "^@utils/(.*)$",
    "^@assets/(.*)$",
    "^@environments/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "decorators-legacy"],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
